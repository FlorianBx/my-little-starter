{
  "name": "@flbx/my-little-starter",
  "version": "1.0.9",
  "type": "module",
  "author": "florian.bx <creek-memoirs.4b@icloud.com>",
  "license": "MIT",
  "description": "A simple starter project for web development with TypeScript, HTML, and CSS / TailwindCSS.",
  "repository": {
    "type": "git",
    "url": "https://github.com/florianbx/my-little-starter.git"
  },
  "bugs": {
    "url": "https://github.com/florianbx/my-little-starter/issues"
  },
  "homepage": "https://github.com/florianbx/my-little-starter#readme",
  "keywords": [
    "starter",
    "typescript",
    "html",
    "css",
    "tailwindcss",
    "vite",
    "boilerplate",
    "template",
    "scaffold",
    "cli"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "mls": "./bin/mls.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "SECURITY.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --watch",
    "prepublishOnly": "pnpm build && pnpm security:check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "security:audit": "pnpm audit",
    "security:check": "pnpm audit && pnpm pack --dry-run",
    "security:update": "pnpm update"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.2",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
